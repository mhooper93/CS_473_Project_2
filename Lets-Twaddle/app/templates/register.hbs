<div id="background_box" class="jumbotron text-center">

  <div id="center_box" class="jumbotron text-center">
    <h3 id="header">Register</h3>
    <img id="login_icon" src="/img/icon2.png" alt="login_icon" />

    <div id="loginStuff">
      {{input type="email" value=userEmail class="form-control" placeholder="Enter your e-mail" autofocus="autofocus"}}
    </div>
    <div id="loginStuff">
      {{input type="password" value=userPassword class="form-control" placeholder="Create a password (at least 8 characters)"}}
    </div>
    <div id="loginStuff">
      {{input type="password" value=confirmedPassword class="form-control" placeholder="Confirm password"}}
    </div>
    <br/>
    <div id="loginStuff">
      <button disabled= {{isDisabled}} {{action 'register'}} class="btn btn-primary login-button btn-block">Create Account</button>
    </div>
  </div>
</div>
