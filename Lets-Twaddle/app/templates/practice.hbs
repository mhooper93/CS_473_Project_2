<div class="container">
  <div class="stash"></div>
  <div class="chatbox_jumbotron">
    <br/>
    <h1 class="text-center">Mutter</h1>
    <br/>
    <p class="warning">This is a Public Chat Room. Messages can be seen by everyone</p>
    <p class="sender_message">Click on the sender email to have a private chat</p>
    <br/>
    {{#each model as |public-message|}}
      <div class="message_container">
        <li>
          {{#link-to 'privateroom' public-message.id}}<a class="username" href="">{{public-message.sender}}</a>{{/link-to}}
          <span class="time-right">{{public-message.sendingTime}}</span></li>
        <p class="message">{{public-message.message}}</p>

      </div>
    {{/each}}
    <br/>
    <div id="new_message_container" class="form-horizontal form-group form-group-lg row">
      <div id="enter_message" class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
        {{textarea class="form-control" placeholder="Enter your message here. At least 5 characters" rows="3" value=message}}
      </div>
      <div id="send_message" class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
        <button disabled= {{isDisabled}} {{action 'savePublicMessage'}} class="btn btn-primary btn-lg btn-block">Send Message</button>
      </div>
    </div>
    <br/>
  </div>
</div>
