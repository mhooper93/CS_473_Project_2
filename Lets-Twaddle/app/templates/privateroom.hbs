<div class="chatbox_jumbotron">
  <br/>

  <p class="warning">This is a Private Chat Room.</p>
  <p class="sender_message">Messages can only be seen by you and {{chat.sender}}</p>
  <br/>
  {{#each allMessages as |private-message|}}
    <div class="message_container">
        <p class="username">{{private-message.sender}}</p>
        <span class="time-right">{{private-message.sendingTime}}</span>
      <p class="message">{{private-message.message}}</p>
    </div>
  {{/each}}
  <br/>
<div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
        {{textarea class="form-control" placeholder="Enter your message here. At least 5 characters" rows="3" value=message}}
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
          <button disabled={{isDisabled}} {{action 'savePrivateMessage'}} class="btn btn-primary btn-lg btn-block">Send Message</button>
      </div>
    </div>
  <br/>
</div>
